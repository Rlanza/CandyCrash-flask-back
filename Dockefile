FROM tiangolo/meinheld-gunicorn:python3.7
COPY . /app
EXPOSE 80
ENV MODULE_NAME candycrash
ENV WORKERS_PER_CORE 1
RUN pip install -r requirements.txt

# USE THIS COMMANDS TO RUN:
# docker build -t myimage ./
# docker run -p 80:80 -e MODULE_NAME="candycrash" -e WORKERS_PER_CORE="1" -e KEY=$KEY myimage

# OR
# docker build -t myimage ./ && docker run -p 80:80 -e MODULE_NAME="candycrash" -e WORKERS_PER_CORE="1" -e KEY=$KEY myimage